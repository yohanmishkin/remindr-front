<!--
     actions: { 
        nextStep() {
            increment counter
            increment progress bar
            animate question and progress bar }--> 

<div class="remindr-inputs">
  <div class="questions">
    <span class="question">{{currentQuestion}}</span>
    <input type="text" autofocus />
    <div class="controls">
      <button onclick={{action next}} class="next-question">
        <i class="material-icons">keyboard_arrow_right</i>
      </button>
      <progress value="{{questionNumber}}" max="4"></progress>
      <span class="current-question-number">{{questionNumber}} / 3</span>
    </div>
  </div>
</div>